class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int n = matrix.size();
        int m = matrix[0].size();
        unordered_set<int> sRows; 
        unordered_set<int> sColumns; 
        for(int i=0; i<n; i++){
            for(int j=0; j<m; j++){
                if(matrix[i][j] == 0){
                    sRows.insert(i);
                    sColumns.insert(j);
                }
            }
        }
        for(int i=0; i<n; i++){
            for(int j=0; j<m; j++){
                if(sRows.count(i) > 0 || sColumns.count(j) > 0){
                    matrix[i][j] = 0;
                }
            }
        }
    }
};

// for SC:O(1). I had to reffer to striver.
